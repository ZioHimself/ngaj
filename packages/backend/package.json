    "cron-parser": "^5.4.0",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-session": "^1.19.0",
    "mongodb": "^7.0.0",
    "node-cron": "^3.0.3",
    "openai": "^4.63.0",
    "pdf-parse": "^2.4.5",
    "tiktoken": "^1.0.22",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.9.2",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
