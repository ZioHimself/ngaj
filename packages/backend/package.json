{
  "name": "@ngaj/backend",
  "version": "0.1.0",
  "description": "ngaj backend API server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist",
