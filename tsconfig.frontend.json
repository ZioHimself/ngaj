{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist/frontend",
    "types": ["vite/client", "node"],
    "skipLibCheck": true
  },
  "include": ["src/frontend/**/*", "src/shared/**/*"],
  "exclude": ["node_modules", "dist", "src/backend", "tests"]
}

